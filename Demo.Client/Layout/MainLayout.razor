        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">

            <AuthorizeView>
                <Authorized>
                    <span>Hola, @context.User.Identity?.Name</span>
                    <a href="#" class="nav-link btn btn-link">Salir</a>
